		<% event.attrs.each do |attribute| %>
		<tr>
			<td style="width: 30%;"><label class="control-label">Event <%= attribute.name %></label></td>
			<td><label class="control-label"><%= attribute.value %></label></td>
		</tr>
		<% end %>
		<tr>
			<td style="width: 30%;"><label class="control-label">Event Type</label></td>
			<td><label class="control-label"><%= event.ttype %></label></td>
		</tr>
		<tr>
			<td style="width: 30%;"><label class="control-label">Event Privacy Type</label></td>
			<td><label class="control-label"><%= event.privacy_type %></label></td>
		</tr>
		<% if !event.capacity.nil? && !event.capacity.zero? %>
		<tr>
			<td style="width: 30%;"><label class="control-label">Event Capacity</label></td>
			<td><label class="control-label"><%= event.capacity %></label></td>
		</tr>
		<% end %>
		<tr>
			<td style="width: 30%;"><label class="control-label">Event Start Date</label></td>
			<td><label class="control-label"><%= event.start_date.strftime("%A, %d %b %Y") %></label></td>
		</tr>
