<h3 class="control-label">Your RSVPs</h3>
<% if @participations.count > 0 %>
<% @participations.each do |rsvp| %>
<a href="<%= dashboard_viewEvent_path %>?event_id=<%= rsvp.event.id %>">
	<table style="width: 100%; border: 2px solid black; padding: 20px;">
		<% rsvp.event.attrs.each do |attribute| %>
		<tr>
			<td style="width: 30%;"><label class="control-label">Event <%= attribute.name %></label></td>
			<td><label class="control-label"><%= attribute.value %></label></td>
		</tr>
		<% end %>
		<tr>
			<td style="width: 30%;"><label class="control-label">Event Type</label></td>
			<td><label class="control-label"><%= rsvp.event.ttype %></label></td>
		</tr>
		<tr>
			<td style="width: 30%;"><label class="control-label">Event Privacy Type</label></td>
			<td><label class="control-label"><%= rsvp.event.privacy_type %></label></td>
		</tr>
		<% if !rsvp.event.capacity.nil? && !rsvp.event.capacity.zero? %>
		<tr>
			<td style="width: 30%;"><label class="control-label">Event Capacity</label></td>
			<td><label class="control-label"><%= rsvp.event.capacity %></label></td>
		</tr>
		<% end %>
		<tr>
			<td style="width: 30%;"><label class="control-label">Event Start Date</label></td>
			<td><label class="control-label"><%= rsvp.event.start_date.strftime("%A, %d %b %Y") %></label></td>
		</tr>
		<tr>
			<td style="width: 30%;"><label class="control-label">Event End Date</label></td>
			<td><label class="control-label"><%= rsvp.event.end_date.strftime("%A, %d %b %Y") %></label></td>
		</tr>
	</table>
</a>
<% end %>
<% else %>
<h4 class="control-label">You currently are not participating in any event! Go to "Browse Events" to join new exciting events!</h4>
<% end %>
<hr>

<h3 class="control-label">Your Events</h3>
<% if @own_events.count > 0 %>
<% @own_events.each do |event| %>
